RewriteEngine On
RewriteBase /

# Jangan rewrite index.php
RewriteRule ^index\.php$ - [L]

# Jika file / folder tidak ada → WordPress handle
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . /index.php [L]

# ===== BLOCK ERROR LOG TAPI WEBSITE TETAP JALAN =====

# Matikan PHP error display di frontend
<IfModule mod_php.c>
php_flag display_errors Off
php_flag log_errors On
</IfModule>

# Jika pakai PHP-FPM
<IfModule mod_proxy_fcgi.c>
SetEnv PHP_DISPLAY_ERRORS Off
</IfModule>

# Custom error page → tetap ke WordPress
ErrorDocument 403 /index.php
ErrorDocument 404 /index.php
ErrorDocument 500 /index.php
